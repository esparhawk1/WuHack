{
  "manifest_version": 2,

  "name": "Terms of Service",
  "description": "Extension breaks down ToS and EULA agreements for easy reading.",
  "version": "1.0",

  "content_scripts": [
	{
	"matches":["<all_urls>"],
	"js": ["script.js"]
	}
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}